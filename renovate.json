{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": ["*"],
      "description": "Disable all non-security updates"
    }
  ],

  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,

  "lockFileMaintenance": {
    "enabled": true,
    "labels": ["security", "transitive-fix"],
    "schedule": ["at any time"]
  },

  "commitMessagePrefix": "fix(deps):",
  "commitMessageAction": "security update",

  "semanticCommits": true,
  "semanticCommitType": "fix",
  "semanticCommitScope": "deps",

  "dependencyDashboard": true,
  "dependencyDashboardTitle": "üõ°Ô∏è Security Dependency Dashboard",

  "assignees": ["@security-team", "@devops-lead"],
  "reviewers": ["@security-team"],

  "stabilityDays": 2,
  "prHourlyLimit": 10,
  "prConcurrentLimit": 5,
  "rebaseWhen": "conflicted"
}
